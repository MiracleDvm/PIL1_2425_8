# .env.example - Copiez ce fichier vers .env et remplissez les valeurs

# Environnement (development, production, testing)
FLASK_ENV=development

# Clés de sécurité (générez des clés uniques et sécurisées)
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Base de données
# Développement
DATABASE_URI=sqlite:///roadonifri.db
# Production (PostgreSQL recommandé)
# DATABASE_URI=postgresql://username:password@localhost/roadonifri

# Configuration JWT/Cookies
JWT_COOKIE_SECURE=false
JWT_COOKIE_CSRF_PROTECT=false

# CORS (origines autorisées, séparées par des virgules)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Redis pour le rate limiting (optionnel)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO

# Upload de fichiers
UPLOAD_FOLDER=uploads
